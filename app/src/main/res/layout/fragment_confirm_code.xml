<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_confirm_code"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.kshrd.ipcam.fragment.FragConfirm">

        <EditText
            android:id="@+id/edConfirm"
            android:layout_width="257dp"
            android:layout_height="71dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="72dp"
            android:ems="10"
            android:hint="@string/ConfirmCode"
            android:inputType="textPersonName"
            android:textColor="#0dd70d"
            android:textColorHint="@color/controller_default"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <Button
            android:id="@+id/btnCodeConfirm"
            android:layout_width="0dp"
            android:layout_height="55dp"

            android:layout_marginTop="16dp"
            android:background="@drawable/default_button_gradient"
            android:text="@string/OK"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/edConfirm"
            app:layout_constraintRight_toRightOf="@+id/edConfirm"
            app:layout_constraintTop_toBottomOf="@+id/textViewDes" />

        <TextView
            android:id="@+id/textViewDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/LetDoItAgainIfYouForget"
            android:textColor="#0dd70d"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/edConfirm"
            app:layout_constraintRight_toRightOf="@+id/edConfirm"
            app:layout_constraintTop_toBottomOf="@+id/edConfirm" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView2"
            android:layout_width="119dp"
            android:layout_height="97dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="96dp"
            android:src="@drawable/ic_launcher"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>
