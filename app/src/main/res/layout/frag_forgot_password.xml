<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frag_forgot_password"
        tools:context="com.kshrd.ipcam.fragment.ForgotPasswordFragment">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgMainLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="96dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="4dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/edit_email_reset_pwd"
            android:textColorHint="@color/Text"
            android:textColor="@color/Text"
            app:layout_constraintLeft_toLeftOf="@+id/imgMainLogo"
            app:layout_constraintRight_toRightOf="@+id/imgMainLogo"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/imgMainLogo"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:hint="@string/Email" />

        <TextView
            android:text="@string/ForgotPasswordDes"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Text"
            android:id="@+id/textViewDes"
            app:layout_constraintRight_toRightOf="@+id/edit_email_reset_pwd"
            app:layout_constraintLeft_toLeftOf="@+id/edit_email_reset_pwd"
            android:layout_marginTop="16dp"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_email_reset_pwd"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintHorizontal_bias="1.0" />

        <Button
            android:text="@string/SendLinkReset"
            android:layout_height="wrap_content"
            android:id="@+id/btnSenderMail"
            android:background="@drawable/default_button_gradient"
            android:textColor="#ffffff"
            android:layout_width="300dp"
            app:layout_constraintLeft_toLeftOf="@+id/textViewDes"
            app:layout_constraintRight_toRightOf="@+id/textViewDes"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDes"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintHorizontal_bias="0.0" />


    </android.support.constraint.ConstraintLayout>


</ScrollView>
