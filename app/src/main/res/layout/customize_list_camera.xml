<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#FF17CBC7">


    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:id="@+id/cdViewListCamera"
        android:layout_height="100dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardBackgroundColor="@color/backgroundColor"
       >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ><!--android:background="@color/backgroundColor"-->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:id="@+id/btnMenuCameraList"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="16dp" />

            <TextView
                android:text="CameraName"
                android:layout_width="0dp"
                android:textColor="#FF17CBC7"
                android:layout_height="28dp"
                android:id="@+id/tvCameraName"
                tools:layout_conversion_absoluteX="142dp"
                tools:layout_conversion_absoluteY="40dp"
                tools:layout_conversion_absoluteWidth="133dp"
                tools:layout_conversion_absoluteHeight="28dp"
                app:layout_constraintRight_toLeftOf="@+id/btnMenuCameraList"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@+id/imageViewCameraImage"
                app:layout_constraintHorizontal_bias="0.28"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="32dp" />

            <TextView
                android:text="Port Number"
                android:layout_width="91dp"
                android:layout_height="21dp"
                android:id="@+id/tvPortNumber"
                android:textColor="#FF17CBC7"
                tools:layout_conversion_absoluteX="163dp"
                tools:layout_conversion_absoluteY="79dp"
                tools:layout_conversion_absoluteWidth="91dp"
                tools:layout_conversion_absoluteHeight="21dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvCameraName"
                app:layout_constraintVertical_bias="0.17000002"
                app:layout_constraintLeft_toLeftOf="@+id/tvCameraName"
                app:layout_constraintRight_toRightOf="@+id/tvCameraName"
                />

            <ImageView
                android:layout_width="57dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_local_see_black_24dp"
                android:id="@+id/imageViewCameraImage"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintVertical_bias="1.0"
                android:layout_marginLeft="16dp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
